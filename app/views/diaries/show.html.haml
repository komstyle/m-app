.wrapper-my
  .my-header
    .my-header__left
      %a= @user.name
    .my-header__center
      %a= "Diary Create"
    .my-header__right
      %i= icon('fa', 'bars',  class: "header__icon")
      .sidebar
        .sidebar__inner
          = "menu"
          .sidebar__inner__ttl.Menu
            %i= icon('far', 'times-circle', class: "sidebar__inner__ttl__icon")
        = link_to(root_path) do
          %p.sidebar__txt.Menu
            = "マイページ"
        = link_to(edit_user_path(current_user.id)) do
          %p.sidebar__txt.Menu
            = "グループページ"
        = link_to :back do
          %p.sidebar__txt.Menu
            = "戻る"
        = link_to(destroy_user_session_path, method: :delete) do
          %p.sidebar__txt.Menu
            = "ログアウト"
  .diary-body
    .diary-body__top
      .diary-body__top__date
        %a= "日付：#{@diary.date}"
      .diary-body__top__point
        %a= "ポイント：#{@diary.point}"
    .diary-body__bottom
      .diary-body__bottom__text
        %a= simple_format(@diary.text)
.sidebar-bg
